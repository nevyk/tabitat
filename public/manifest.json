{
  "name": "Tabitat",
  "description": "A habitat for tabs",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/tabs_16.png",
    "24": "icons/tabs_24.png",
    "32": "icons/tabs_32.png",
    "128": "icons/tabs_128.png",
    "256": "icons/tabs_256.png",
    "512": "icons/tabs_512.png"
  },
  "browser_action": {
    "default_title": "Tabitat",
    "default_popup": "index.html"
  },
  "permissions": ["tabs"],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Period"
      }
    }
  }
}
